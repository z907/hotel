<Window x:Name="wnd" x:Class="Hotel.View.ChooseExistingCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Hotel.View"
        xmlns:viewModel="clr-namespace:Hotel.ViewModel"
        mc:Ignorable="d"
        Title="ChooseExistingCustomer" Height="450" Width="600">
    <Control.Resources>
        <viewModel:ChooseExistingVm x:Key="cev"></viewModel:ChooseExistingVm>
    </Control.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Row="0">
        <DataGrid  SelectedItem="{Binding NewCustomer,Mode=OneWayToSource,UpdateSourceTrigger=Explicit}" ColumnWidth="*" x:Name="gr" AutoGenerateColumns="True" ItemsSource="{Binding Source={StaticResource cev},Path=Customers}">
            
        </DataGrid>
        </ScrollViewer>
        <Button CommandParameter="{Binding ElementName=wnd}" Command="{Binding Source={StaticResource cev},Path=OK}" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="50" Width="100">OK</Button>
    </Grid>
</Window>
